<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.xfhy.vmovie">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 当前的网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".global.VMovieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.GuideActivity">
        </activity>
        <activity android:name=".activity.MainActivity">
        </activity>
        <activity
            android:name=".activity.MovieDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity android:name=".activity.ChannelDetailsActivity">
        </activity>
        <activity android:name=".activity.SearchActivity">
        </activity>
        <activity android:name=".activity.ArticleDetailsActivity">
        </activity>
        <activity android:name=".activity.SeriesDetailsActivity">
        </activity>
        <activity android:name=".activity.LoginActivity">
        </activity>
        <activity android:name=".activity.BannerDetailsActivity">
        </activity>
        <activity android:name=".activity.SettingActivity">
        </activity>
    </application>

</manifest>