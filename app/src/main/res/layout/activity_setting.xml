<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:id="@+id/sv_setting_root_view"
    tools:context="com.xfhy.vmovie.activity.SettingActivity">

    <!--设置界面-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/color_alpha_black_1"/>

        <!--用户反馈-->
        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_customer_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_info_show="false"
            attr:setting_item_title="用户反馈"
            />

        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_info_show="true"
            attr:setting_item_info="19.06M"
            attr:setting_item_title="清除图片缓存"
            />


        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_play_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_info_show="false"
            attr:setting_item_title="播放设置"
            />

        <com.xfhy.vmovie.view.SettingSwitchItem
            android:id="@+id/ssi_nowifi_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_item_title="允许非WIFI网络下载"
            attr:switch_open="false"
            />

        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_cffline_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_item_info="手机存储"
            attr:setting_item_title="离线缓存路径设置"
            />

        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_info_show="false"
            attr:setting_item_title="给V电影评分"
            />

        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_update_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_item_info="V5.1.9(Build 170)"
            attr:setting_item_title="版本更新"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/color_alpha_black_1"/>

        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_info_show="false"
            attr:setting_item_title="分享给好友"
            />

        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_submission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_info_show="false"
            attr:setting_item_title="给我投稿"
            />

        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_attention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_info_show="false"
            attr:setting_item_title="关注微信公众号"
            />

        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_join_qq_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_info_show="false"
            attr:setting_item_title="加入用户QQ群"
            />

        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_info_show="false"
            attr:setting_item_title="关于我们"
            />

        <com.xfhy.vmovie.view.SettingNormalItem
            android:id="@+id/sni_statement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attr:setting_info_show="false"
            attr:setting_item_title="免责声明"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/color_alpha_black_1"/>

    </LinearLayout>

</ScrollView>
