<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_gray_9</item>
    </style>

    <!--侧边菜单的RadioButton的主题-->
    <style name="ContrRadioBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_controller_bg</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">@drawable/selector_side_radiogroup_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--电影详情页底部按钮的style-->
    <style name="MovieDetailsBottomBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/color_gray_9</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--分享PopupWindow的动画style-->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/share_menu_show</item>
        <item name="android:windowExitAnimation">@anim/share_menu_hide</item>
    </style>

    <style name="LoginEditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/color_gray_9</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>
